<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.Kopiku.AppWidgetContainer"
    android:background="@drawable/splash_screen_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <carbon.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_brown"
                android:padding="10dp"
                app:carbon_cornerRadius="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_coffee"
                    />
            </carbon.widget.ConstraintLayout>


            <TextView
                android:id="@+id/dataCoffe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Coffee"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/dark_brown"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <carbon.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_brown"
                android:padding="10dp"
                app:carbon_cornerRadius="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_makan"
                    />
            </carbon.widget.ConstraintLayout>

            <TextView
                android:id="@+id/datamakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Makanan"
                android:textColor="@color/dark_brown"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <carbon.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_brown"
                android:padding="10dp"
                app:carbon_cornerRadius="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_nonkopi"
                    />
            </carbon.widget.ConstraintLayout>

            <TextView
                android:id="@+id/datanonkopi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Non Kopi"
                android:textColor="@color/dark_brown"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <carbon.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_brown"
                android:padding="10dp"
                app:carbon_cornerRadius="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_snack"
                    />
            </carbon.widget.ConstraintLayout>

            <TextView
                android:id="@+id/datasnack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Snack"
                android:textColor="@color/dark_brown"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>