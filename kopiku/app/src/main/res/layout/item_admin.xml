<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:carbon_cornerRadius="5dp"
    app:carbon_elevation="25dp"
    app:carbon_elevationShadowColor="@color/dark_brown"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="28dp"
    android:layout_marginHorizontal="@dimen/margin_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemadmin"
    >

    <ImageView
        android:id="@+id/img_v"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_exmple"/>
    <carbon.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">
        <CheckBox
            android:id="@+id/habis"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Habis"
            android:textColor="@color/grey"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"/>
        <ImageView
            android:id="@+id/btn_update"
            app:layout_constraintTop_toBottomOf="@+id/habis"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_update"/>

    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/close_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_sembold"
            android:text="Coffe Latte"
            android:textColor="@color/semi_black"
            android:textSize="18dp"/>
        <carbon.widget.ConstraintLayout
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item_name"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@id/qty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Kategori : "
                android:textColor="@color/grey"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/cty_item"
                app:layout_constraintLeft_toRightOf="@id/qty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Cat"
                android:textColor="@color/grey"
                android:textSize="12dp"/>
        </carbon.widget.ConstraintLayout>

        <carbon.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/price_title"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Harga : "
                android:textColor="@color/light_brown"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/price"
                app:layout_constraintLeft_toRightOf="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Rp. 15.000"
                android:textColor="@color/light_brown"
                android:textSize="12dp"/>
        </carbon.widget.ConstraintLayout>

    </carbon.widget.ConstraintLayout>



</carbon.widget.ConstraintLayout>