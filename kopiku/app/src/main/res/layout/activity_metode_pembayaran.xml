<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg">

    <carbon.widget.ConstraintLayout
        android:id="@+id/action_bard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/margin_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:carbon_elevation="20dp"
        app:carbon_elevationShadowColor="@color/dark_brown">
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/dark_brown"
        android:textSize="20dp"
        android:text="Metode Pembayaran"
        android:textAlignment="center"/>
    </carbon.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/action_bard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <carbon.widget.LinearLayout
            android:id="@+id/pay_tunai"
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/white"
            android:gravity="center"
            app:carbon_elevation="20dp"
            app:carbon_elevationShadowColor="@color/dark_brown">
            <carbon.widget.ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_tunai"
                android:layout_gravity="center"/>
        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:id="@+id/pay_gopay"
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/white"
            android:gravity="center"
            app:carbon_elevation="20dp"
            app:carbon_elevationShadowColor="@color/dark_brown">
            <carbon.widget.ImageView
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:background="@drawable/pay_gopay"
                android:layout_gravity="center"/>
        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:id="@+id/pay_ovo"
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/white"
            android:gravity="center"
            app:carbon_elevation="20dp"
            app:carbon_elevationShadowColor="@color/dark_brown">
            <carbon.widget.ImageView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/pay_ovo"
                android:layout_gravity="center"/>
        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:id="@+id/pay_dana"
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/white"
            android:gravity="center"
            app:carbon_elevation="20dp"
            app:carbon_elevationShadowColor="@color/dark_brown">
            <carbon.widget.ImageView
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:background="@drawable/pay_dana"
                android:layout_gravity="center"/>
        </carbon.widget.LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>