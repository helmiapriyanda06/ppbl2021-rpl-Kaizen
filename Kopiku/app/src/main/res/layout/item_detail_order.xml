<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="25dp"
    app:carbon_cornerRadius="15dp">

    <carbon.widget.ConstraintLayout
        android:id="@+id/close_icon_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Agung"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_popup"
            app:layout_constraintRight_toRightOf="parent" />

    </carbon.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/detail_order_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@id/close_icon_con">

        <TableRow android:background="@color/white">

            <TextView
                android:layout_width="150dp"
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_bold"
                android:text="Coffe Latte"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="Qty"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="Harga"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_regular"
                android:text="bakwan"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="2"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="40k"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_regular"
                android:text="bakwan"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="2"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="40k"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_regular"
                android:text="bakwan"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="2"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="40k"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_regular"
                android:text="bakwan"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="2"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="40k"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <carbon.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:background="@color/light_brown" />

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_bold"
                android:text="Total"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="8 item"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text="160k"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_bold"
                android:text="Metode Pembayaran"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text=""
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="OVO"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/white">

            <TextView
                android:layout_gravity="left"
                android:fontFamily="@font/opensans_bold"
                android:text="Status Pembayaran"
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:text=""
                android:textColor="@color/light_brown"
                android:textSize="12dp" />

            <carbon.widget.TextView
                android:layout_gravity="center"
                android:background="@color/green"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="10dp"
                android:text="Sudah Bayar"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:carbon_cornerRadius="4dp" />
        </TableRow>
    </TableLayout>


</carbon.widget.ConstraintLayout>