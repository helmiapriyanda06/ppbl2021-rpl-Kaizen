<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayoutCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_fitToContents="false"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/ps_bold"
        android:gravity="center"
        android:text="Selamat, pesanan kamu sedang diproses"
        android:textColor="#323232"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_success" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:fontFamily="@font/ps_regular"
        android:gravity="center"
        android:text="Kamu dapat melihat perkembangan pesanan kamu di menu order"
        android:textColor="#828282"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btntutup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ps_bold"
        android:gravity="center"
        android:text="TUTUP"
        android:textColor="@color/light_brown"
        android:layout_marginBottom="24dp"
        android:textSize="16sp" />
</LinearLayout>