<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:carbon_cornerRadius="5dp"
    app:carbon_elevation="25dp"
    app:carbon_elevationShadowColor="@color/dark_brown"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="28dp"
    android:layout_marginHorizontal="@dimen/margin_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/img_v"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_exmple"/>
    <carbon.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/close_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_sembold"
            android:text="Coffe Latte"
            android:textColor="@color/semi_black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/qty_item"
            app:layout_constraintTop_toBottomOf="@+id/item_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Qty : 4"
            android:textColor="@color/light_brown"
            android:textSize="12dp"/>
        <carbon.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/qty_item"
            app:layout_constraintRight_toRightOf="parent">

        </carbon.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvCartTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Rp. 15.000"
            android:textColor="@color/light_brown"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnhapus"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="HAPUS"
            android:textColor="#BC7755"
            android:textSize="10sp"
            app:backgroundTint="#fff"
            app:cornerRadius="32dp"
            app:strokeColor="#BC7755"
            app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnbayar"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="BAYAR"
            android:textColor="#BC7755"
            android:textSize="10sp"
            app:backgroundTint="#fff"
            app:cornerRadius="32dp"
            app:strokeColor="#BC7755"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </carbon.widget.ConstraintLayout>




</carbon.widget.ConstraintLayout>